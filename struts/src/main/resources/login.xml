<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="false"/>


    <package name="login" namespace="/logged" extends="struts-default">

        <action name="Login" class="login.Login">
            <result name="success">/WEB-INF/accueil/accueil_connecte.jsp</result>
            <result name="input">/WEB-INF/accueil/accueil.jsp</result>
            <result name="error">/WEB-INF/accueil/accueil.jsp</result>
        </action>

        <action name="accueil" class="login.Login" method="accueil">
            <result>/WEB-INF/accueil/accueil_connecte.jsp</result>
        </action>


                                <!-- OEUVRES-->
        <action name="listeOeuvres" class="admin.OeuvresActions" method="getAllOeuvres">
            <result>/WEB-INF/oeuvre/listeOeuvres.jsp</result>
        </action>

        <action name="ajoutOeuvre" class="admin.OeuvresActions" method="toAddOeuvre">
            <result>/WEB-INF/oeuvre/ajoutOeuvre.jsp</result>
        </action>



                                <!-- MEMBRES-->
        <action name="listeMembres" class="admin.MembresActions" method="getAllMembers">
            <result>/WEB-INF/membre/listeMembres.jsp</result>
        </action>
        <action name="ajoutMembres" class="admin.MembresActions" method="toAddMembers">
            <result>/WEB-INF/membre/ajoutMembre.jsp</result>
        </action>


                                <!-- EMPRUNTS-->
        <action name="listeEmprunts" class="admin.EmpruntsActions" method="getAllEmprunts">
            <result>/WEB-INF/emprunt/listeEmprunts.jsp</result>
        </action>
        <action name="ajoutEmprunts" class="admin.EmpruntsActions" method="toAddEmprunts">
            <result>/WEB-INF/emprunt/ajoutEmprunt.jsp</result>
        </action>

    </package>
</struts>