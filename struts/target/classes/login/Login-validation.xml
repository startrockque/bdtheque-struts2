<?xml version="1.0"?>
<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
    <field name="login">
        <field-validator type="requiredstring">
            <message>Entrez un login</message>
        </field-validator>
    </field>

    <field name="mdp" >
        <field-validator type="requiredstring">
            <message>Entrez un mot de passe</message>
        </field-validator>
    </field>


</validators>